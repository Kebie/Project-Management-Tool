%h1= @project.title
%section
  %article= @project.description
  %section
    = link_to "Edit" , edit_project_path , class: "btn btn-primary"
    = link_to "Delete", @project, method: :delete, data: {confirm: "Are you sure you want to delete this question?"}, class: "btn btn-danger"

%h2 Tasks
= link_to "Add Task", new_project_task_path(@project), class: "btn btn-primary"

%h3 Incomplete Tasks
%table.table
  %tr
    %th Task Title
    %th Mark Complete
  - @tasks_incomplete.each do |task|
    %tr
      %td= link_to task.title, edit_project_task_path(@project, task)
      %td= link_to icon('times'), done_project_task_path(@project, task) , class: "btn btn-danger"
      

%h3 Done Tasks

%table.table
  %tr
    %th Task Title
    %th Mark Incomplete
  - @tasks_complete.each do |task|
    %tr
      %td= link_to task.title, edit_project_task_path(@project, task)
      %td= link_to icon('check') , done_project_task_path(@project, task) , class: "btn btn-success"

%h2 Discussions

= link_to "Add Discussion", new_project_discussion_path(@project), class: "btn btn-primary"

%table.table
  %tr
    %th Discussion Title
  - @discussions.each do |discussion|
    %tr
      %td= link_to discussion.title, project_discussion_path(@project, discussion)